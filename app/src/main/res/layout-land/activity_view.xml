<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewActivity">

    <TextView
        android:id="@+id/tvUserInfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tv_Up"
        android:layout_margin="@dimen/et_marginS"
        android:text="@string/tvUserInfoText" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tv_Down"
        android:layout_margin="@dimen/et_marginS"
        android:background="@color/backGroundEdMessage"
        android:text="@string/tvMessageText"
        android:textColor="@color/white" />
</LinearLayout>